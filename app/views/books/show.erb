<div class="columns">
    <div class="column is-8 is-offset-2 ">
        <h2 class="title is-2 is-centered" > View Book </h2>

		<div class="content">
                <h1 class="title is-3"><%= @book.title %></h1>
               <strong> Witten By: </strong> <%=@book.author%> <br><br>

                <strong> Summary: </strong>
                <div class="box">
                    <h5 class="subtitle is-8">
                        <%=@book.summary%>
                    </h5>
                </div>

                <strong> My favorite quote: </strong>
                <div class="box">
                    <h5 class="subtitle is-8"> 
                        <%=@book.quote%>
                    </h5>
                </div>
    
                <br>
                <div class="control">
					    
					    <form method="post" action="/books/<%=@book.id%>/delete">
                            <input id="hidden" type="hidden" name="_method" value="delete">
                            <a class="button is-info" href="/books/<%=@book.id%>/edit">Edit Book</a>
                            <input class="button is-danger" type="submit" value="Delete Book">

                        </form>
                </div>
                <br><br>
        </div>



    </div>
</div>